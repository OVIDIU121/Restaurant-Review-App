<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun"
    tools:context=".account.ForgotPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_reset_pw_back"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_background_tint"
                android:fontFamily="serif"
                android:text="Back"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                app:cornerRadius="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_reset_pw"
                app:strokeColor="@color/button_text"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="To reset password, enter you email below, press the button and check e-mail to follow instructions."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/tv_forgotpassword_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgotpassword1" />

            <TextView
                android:id="@+id/tv_forgotpassword1"
                android:layout_width="300dp"
                android:layout_height="49dp"
                android:fontFamily="serif"
                android:text="Forgot your password?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/tv_forgotpassword_email"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:fontFamily="serif"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/tv_email_pw_reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/tv_email_pw_reset"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Enter your email here"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/btn_reset_pw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgotpassword_email"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_reset_pw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_background_tint"
                android:fontFamily="serif"
                android:text="Reset Password"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                app:cornerRadius="30sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_reset_pw_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_pw_reset"
                app:strokeColor="@color/button_text"
                app:strokeWidth="2px" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
